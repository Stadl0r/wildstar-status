
html, body {
  height: 100%;
}

.backgrounds {
  content: '';
  display: block;
  position: fixed;
  overflow: hidden;
  top: 0;
  right: 0;
  left: 0;
  z-index: -1;

  &:before {
    background-image: url('/assets/img/bg1.jpg');
    background-position: center top;
    background-repeat: no-repeat;
    background-size: contain;
    content: '';
    display: block;
    position: absolute;
    top: 0px;
    left: 0;
    right: 0;
    width: 100%;
    min-height: 534px;
    z-index: 0;
  }
  &:after {
    background-image: url('/assets/img/bg2.jpg');
    background-position: center bottom;
    background-repeat: no-repeat;
    background-size: contain;
    content: '';
    display: block;
    position: absolute;
    min-height: 460px;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;
  }
}

body {
  background-color: dark-blue;
  max-height: 100% !important;
}


header {

  h1 {
    max-height: 183px;
    width: 100%;
    margin-bottom: 0;
    span { display: none; }
  }
  h2 {
    text-shadow: 0 1px 0 dark-blue;
    color: grey;
    font-size: 48px;
    font-weight: 100;
    margin-top: 0;
    span { color: light-green; }
  }
}

footer {
  text-align: center;
  min-height: 200px;

  p {
    color: blue;
    font-weight: 500;
  }
}


#status {

  .loading {
    box-shadow: 0 0 0 1px grey;
    display: inline-block;
    padding: 20px 60px 20px;
    h3, h4 {
      color: grey;
      margin-bottom: 0;
      margin-top: 0;
      padding: 0;
    }
  }

  h3 {
    color: white;
    font-size: 18px;
    margin-bottom: .6em;
    margin-top: 0;
    padding-bottom: .6em;
    span { color: }

    &:before {
      content: '';
      border-radius: 1000px;
      display: inline-block;
      margin-bottom: 4px;
      margin-right: 10px;
      width: 9px;
      height: 9px;
      vertical-align: middle;
    }
  }

  .online h3 {
    &:before {
      background-color: green;
      box-shadow: 0 0 0 2px green;
    }
  }

  .offline h3 {
    color: grey;
    &:before { box-shadow: 0 0 0 2px red; }
  }

}

.grey { color: grey; }


@media medium-up {
  #status .loading { padding-bottom: 25px; }
  #status h3 {
    font-size: 32px;
    &:before {
      margin-bottom: 7px;
      margin-right: 14px;
      width: 14px;
      height: 14px;
    }
  }
}
